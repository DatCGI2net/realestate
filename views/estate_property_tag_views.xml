<?xml version="1.0"?>
<odoo>


        <record id="estate_property_tag_view_tree" model="ir.ui.view">
            <field name="name">estate.property.tag.tree</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree string="Estate Property Tag" editable="bottom">
                    <field name="name"/>
                    <field name="color"/>
                    </tree>
        </field>
    </record>

         <record id="estate_property_tag_view_form" model="ir.ui.view">
            <field name="name">estate.property.tag.form</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Amazing property Tag">
                    <sheet>

                           <div class="oe_title">
                                <div class="oe_edit_only">
                                    <label for="name" string="Tag"/>
                                </div>
                                <h1 class="mb32">
                                    <field name="name" class="mb5"/>
                                </h1>
                                <field name="color" />

                            </div>


                    </sheet>
                </form>
        </field>
    </record>


         <record id="estate_property_tag_model_action" model="ir.actions.act_window">
            <field name="name">Estate Property Tag</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>

</odoo>